<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
            android:id="@+id/txt_word"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="이름 : "
            app:layout_constraintBottom_toTopOf="@id/txt_mean"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:id="@+id/txt_mean"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="    뜻 : "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_word"/>

    <TextView
            android:id="@+id/txt_word_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_word"
            app:layout_constraintLeft_toRightOf="@id/txt_word" />

    <TextView
            android:id="@+id/txt_word_mean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mean"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_mean"
            app:layout_constraintLeft_toRightOf="@id/txt_mean" />


</androidx.constraintlayout.widget.ConstraintLayout>